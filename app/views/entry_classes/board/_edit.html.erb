  <%= form.label :publication_level, I18n.t("view.publication_level"), class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
	<%= form.select :publication_level, Entry::PublicationLevel::TYPES, {}, class: "form-control" %>
  </div>
</div>
<%= hidden_field_tag "entry[edit_level]", Entry::EditLevel::BOARDS_ONLY %>
<div class="form-group row">
  <%= form.label :comment_level, I18n.t("entries.comment_level"), class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
	<%= form.select :comment_level, Entry::CommentLevel::TYPES, {}, class: "form-control" %>
  </div>
</div>
<div class="form-group row">
  <%= form.label :body_type, I18n.t("entries.body_type"), class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
	<% if ( @entry.id ) %>
	  <%= form.select :body_type, Entry::BodyType::TYPES, {}, class: "form-control", disabled: true %>
	<% else %>
	  <%= form.select :body_type, Entry::BodyType::TYPES, {}, class: "form-control" %>
	<% end %>
  </div>
</div>
<div class="form-group row">
  <%= form.label :body, I18n.t("view.body"), for: "body", class: "col-sm-2 col-form-label" %>
  <div class="col-sm-10">
	<%= form.text_area :body, class: "form-control", style:"height:500px;" %>
	<div id="monaco" style="height:500px;border:1px solid gray;display:none;"></div>
  </div>
</div>

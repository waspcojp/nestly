<% @nest = @space.nest %>
<% content_for :header do %>
  <%= render "nests/header" %>
<% end %>
<% content_for :body do %>
<div class="container-fluid">
  <h3 class="mt-3"><%= t('spaces.member_list_for', name: @space.title)%></h3>
  <div class="row">
	<div class="col-sm-3">
	  <%= render "meta" %>
	  <%= render "nests/info" %>
	</div>
	<div class="col-sm-9">
	  <div class="row">
		<% @space.members.each do | member | %>
		  <div class="card col-sm-2" style="margin:10px;padding:0">
			<div class="card-header">
			  <%= member.display_name %>
			</div>
			<div class="card-body" style="padding:5px;">
			  <%= icon_img_tag member.target, "list", class: "card-img-top", id: "image_preview" %>
			</div>
		  </div>
		<% end %>
	  </div>
	</div>
  </div>
</div>
<% end %>

<div class="col-sm-4" style="padding:10px;">
  <div class="<%= (space.released?) ? "card" : "card border-danger" %>">
	<div class="card-header" style="height:70px;">
	  <div class="d-flex justify-content-between">
		<span>
		  <%= link_to(space, class: "link") do %>
			<%= space.title %>
		  <% end %>
		</span>
		<span>
		  <% if (( @nest ) &&
				 (  @nest.admin?(current_user) )) %>
			<%= link_to(edit_space_path(space), class:"link") do %>
			  <i class="fas fa-cog tips" title="<%= t('help.spaces.edit')%>"></i>
			<% end %>
		  <% end %>
		  <% if ( watch ) %>
			<%= check_box_tag "check[#{watch.id}", watch.id, watch.active,
				class: "watch-check tips", title: "#{t('help.spaces.watch')}" %>
		  <% else %>
			<%= check_box_tag "check", 0, false,
				class: "watch-check tips", 'data-id': space.id, 'data-type': "Space", title: "#{t('help.spaces.watch')}" %>
		  <% end %>
		</span>
	  </div>
	</div>
	<div class="card-body" style="height:295px;overflow-y:hidden;">
	  <div class="text-center">
		<%= icon_img_tag(space, "side", class: "title-image", href: space_path(space)) %>
	  </div>
	  <div>
		<%= space.text(50, 220,160) %>
	  </div>
	</div>
  </div>
</div>

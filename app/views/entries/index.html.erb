<% content_for :header do %>
  <%= render "nests/header" %>
<% end %>
<% content_for :body do %>
<%= render "shared/watch_control" %>
<style>
</style>
<div class="container-fluid">
  <% if ( @space ) %>
	<h3 class="mt-3">
	  <%= t('entries.list_of', name: @space.title) %>
	</h3>
  <% else %>
	<h3 class="mt-3">
	  <%= t('entries.list_of', name: @nest.title) %>
	</h3>
  <% end %>
  <div class="page-header">
	<div class="row">
	  <div class="col-sm-3">
		<% if ( @space ) %>
		  <%= image_tag "/icons/get_icon?id=#{@space.icon_image_id}", class: "card-img-top", style: "width:220px;" %>
		<% else %>
		  <%= image_tag "/icons/get_icon?id=#{@nest.icon_image_id}", class: "card-img-top", style: "width:220px;" %>
		<% end %>
	  </div>
	</div>
  </div>

  <div class="row">
	<div class="col-sm-3">
	  <div style="height:10px;">
	  </div>
	  <% if ( @space ) %>
		<%= render "spaces/meta" %>
	  <% else %>
		<%= render "nests/meta" %>
	  <% end %>
	</div>
	<div class="col-sm-9">
	  <div class="row">
		<%= render "entries/list" %>
	  </div>
	</div>
  </div>
</div>
<% end %>

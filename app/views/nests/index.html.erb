<% content_for :header do %>
<div class="navbar subnav">
  <ul class="nav">
	<li class="nav-item">
	  <% if ( action_name == "index" ) %>
		<span class="nav-link active"><%= t('shared.lower_header.nests') %></span>
	  <% else %>
		<%= link_to t('shared.lower_header.nests'), nests_path, class: "nav-link" %>
	  <% end %>
	</li>
	<li class="nav-item">
	  <% if ( action_name == "new" ) %>
	  <% else %>
		<%= link_to t('shared.nests.new'), new_nest_path, class: "nav-link" %>
	  <% end %>
	</li>
  </ul>
</div>
<% end %>
<% content_for :body do %>
<style>
</style>
<div class="row">
  <div class="mb-3">
	<%= render "shared/flash" %>
  </div>
</div>
<div class="row">
  <% @nests.each do | nest | %>
	<div class="col-sm-3" style="padding:10px;">
	  <div class="card">
		<div class="card-header">
		  <div class="d-flex justify-content-between">
			<%= nest.title %>
			<% if (  nest.admin?(current_user) ) %>
			  <%= link_to(edit_nest_path(nest), class:"link") do %>
				<i class="fas fa-cog"></i>
              <% end %>
			<% end %>
		  </div>
		</div>
		<%= link_to(nest_path(nest), class:"link") do %>
		  <%= image_tag "/icons/edit_icon?id=#{nest.icon_image_id}", class: "card-img-top", id: "image_preview" %>
		<% end %>
		<div class="card-body">
		  <ul>
			<li><%= Nest::PublicationLevel::TYPES.rassoc(nest.publication_level)[0] %></li>
			<li><%= Nest::JoinMethod::TYPES.rassoc(nest.join_method)[0] %></li>
		  </ul>
		  <div>
			<%= str_to_html nest.description || "" %>
		  </div>
		</div>
	  </div>
	</div>
  <% end %>
</div>
<% end %>
